{
    "builds": [
        {
            "src": "vercel_app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/favicon.ico",
            "dest": "/staticfiles/images/favicon.ico"
        },
        {
            "src": "/favicon.png",
            "dest": "/staticfiles/images/favicon.ico"
        },
        {
            "src": "/static/(.*)",
            "dest": "/staticfiles/$1"
        },
        {
            "src": "/(.*)",
            "dest": "vercel_app.py"
        }
    ],
    "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput"
}